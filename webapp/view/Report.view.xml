<mvc:View
    controllerName="hcm.cvi.report.balancing.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:sfb="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:unified="sap.ui.unified"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Page
        id="page"
        title="{i18n>title}"
        showHeader="false"
    >
        <content>
            <IconTabBar
                id="idIconTabBar"
                select="onTabBarSelect"
                class="sapUiResponsiveContentPadding"
                expandable="false"
				selectedKey="02"
            >
                <items>
                    <IconTabFilter
                        key="01"
                        text="Balancing"
                    />
                    <IconTabSeparator />
                    <IconTabFilter
                        key="02"
                        text="Report Annual CVI"
                    />
                </items>
                <content>
                    <VBox fitContainer="true">
                        <f:DynamicPageHeader>
                            <sfb:SmartFilterBar
                                id="smartFilterBar"
                                entitySet="ZHCMCD_CVI_RESULT"
                                search="onSearch"
                            />
                        </f:DynamicPageHeader>
                        <t:Table
                            id="balancingTable"
                            selectionMode="MultiToggle"
                            visibleRowCountMode="Auto"
                        >
                            <t:extension>
                                <OverflowToolbar style="Clear">
                                    <ToolbarSpacer />
                                    <Button
                                        id="button"
                                        text="Balancing"
                                        press="onBalancingPress"
                                    />
                                    <Button
                                        icon="sap-icon://excel-attachment"
                                        pressed="false"
                                        press="onDownloadBalancing"
                                    />
                                </OverflowToolbar>
                            </t:extension>
                        </t:Table>
                    </VBox>
                </content>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>
