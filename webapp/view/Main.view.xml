<mvc:View
    controllerName="hcm.cvi.report.balancing.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page
        id="page"
        title="{i18n>title}"
        showHeader="false"
    >
        <content>
            <IconTabBar
                id="idIconTabBar"
                select="onTabBarSelect"
                class="sapUiResponsiveContentPadding"
                expandable="false"
            >
                <items>
                    <IconTabFilter
                        key="01"
                        text="Balancing"
                    />
                    <IconTabSeparator />
                    <IconTabFilter
                        key="02"
                        text="Report Annual CVI"
                    />
                </items>
                <content />
            </IconTabBar>

            <VBox
                fitContainer="true"
                visible="{oLocalModel>/VisibleReportAnnual}"
            >
                <core:Fragment
                    fragmentName="hcm.cvi.report.balancing.view.fragments.ReportAnnual"
                    type="XML"
                />
            </VBox>

            <VBox
                fitContainer="true"
                visible="{oLocalModel>/visibleBalancing}"
            >
                <core:Fragment
                    fragmentName="hcm.cvi.report.balancing.view.fragments.Balancing"
                    type="XML"
                />
            </VBox>
        </content>
    </Page>
</mvc:View>
