<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="detailDialog"
        title="{i18n>detailDialogTitle}"
        stretchOnPhone="true"
        contentWidth="500px"
        contentHeight="400px"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer"
    >
        <content>
            <VBox>
                <form:SimpleForm
                    id="detailForm"
                    layout="ResponsiveGridLayout"
                    editable="false"
                    xmlns:form="sap.ui.layout.form"
                >
                    <Label text="ID" />
                    <Text text="{oDetailModel>/ID}" />
                    <Label text="Name" />
                    <Text text="{oModel>/NAME}" />
                </form:SimpleForm>
                <form:SimpleForm
                    layout="ResponsiveGridLayout"
                    editable="false"
                    xmlns:form="sap.ui.layout.form"
                >
                    <Label text="Comment" required="true" />
                    <TextArea value="{oDetailModel>/COMMENT}" />
                </form:SimpleForm>
            </VBox>
        </content>
        <beginButton>
            <Button
                text="Save as Draft"
                icon="sap-icon://save"
                press="onSaveAsDraftButtonPress"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCancelDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
