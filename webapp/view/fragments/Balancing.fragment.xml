<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:sfb="sap.ui.comp.smartfilterbar"
>
        <f:DynamicPageHeader>
            <sfb:SmartFilterBar
                entitySet="ZHCMCD_CVI_BALANCING"
                search="onSearch"
            />
        </f:DynamicPageHeader>
        <t:Table
            id="balancingTable"
            selectionMode="MultiToggle"
        >
            <t:extension>
                <OverflowToolbar style="Clear">
                    <ToolbarSpacer />
                    <Button
                        id="button"
                        text="Balancing"
                        press="onBalancingPress"
                    />
                    <Button
                        icon="sap-icon://excel-attachment"
                        pressed="false"
                        press="onDownloadBalancing"
                    />
                </OverflowToolbar>
            </t:extension>
        </t:Table>
</core:FragmentDefinition>
